<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maroon"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายการออเดอร์ที่ : 1"
            android:textColor="?android:attr/colorPressedHighlight"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แพ็กเกจที่สั่งจัด : Package 2500"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ราคา: 2,500 บาท"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="วันที่จอง: 21 มีนาคม 2025"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จังหวัด: ชลบุรี "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="สถานที่จัดงาน: มหาวิทยาลัยเกษตรศาสตร์ วิทยาเขตศรีราชา "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จำนวนแขก: 100 คน"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- ข้อความรออนุมัติ -->
        <TextView
            android:id="@+id/tvApprovalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รออนุมัติ"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:visibility="gone" /> <!-- ซ่อนไว้เมื่ออนุมัติแล้ว -->

        <!-- ปุ่มยกเลิก -->
        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="❌ยกเลิกออเดอร์"
            android:textColor="@color/dark_red"
            android:translationX="180dp" />

        <!-- ปุ่มจ่ายเงิน -->
        <Button
            android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จ่ายเงิน"
            android:textColor="@color/white"
            android:background="@color/green"
            android:visibility="gone" /> <!-- ซ่อนไว้เมื่อไม่ใช่สถานะอนุมัติ -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
